{
  "root": true,
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "ignorePatterns": [
    "**/*"
  ],
  "plugins": [
    "@nrwl/nx"
  ],
  "extends": [
    "plugin:react/recommended",
    "eslint:recommended",
    "google"
  ],
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.tsx",
        "*.js",
        "*.jsx"
      ],
      "rules": {
        "react/jsx-indent-props": [
          "error",
          "first"
        ],
        "indent": [
          "error",
          2,
          {
            "SwitchCase": 1,
            "ignoredNodes": [
              "JSXAttribute"
            ]
          }
        ],
        "@nrwl/nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "*",
                "onlyDependOnLibsWithTags": [
                  "*"
                ]
              }
            ]
          }
        ]
      }
    },
    {
      "files": [
        "*.ts",
        "*.tsx"
      ],
      "extends": [
        "plugin:react/recommended",
        "plugin:@nrwl/nx/typescript",
        "eslint:recommended",
        "google"
      ],
      "rules": {
        "comma-dangle": "off",
        "new-cap": "off",
        "object-curly-spacing": [
          "error",
          "always"
        ],
        "quotes": [
          "error",
          "double",
          {
            "avoidEscape": true
          }
        ],
        "indent": [
          "error",
          2,
          {
            "SwitchCase": 1
          }
        ],
        "arrow-parens": [
          "error",
          "as-needed"
        ]
      }
    },
    {
      "files": [
        "*.js",
        "*.jsx"
      ],
      "extends": [
        "plugin:react/recommended",
        "plugin:@nrwl/nx/javascript",
        "eslint:recommended",
        "google"
      ],
      "rules": {
        "comma-dangle": "off",
        "object-curly-spacing": [
          "error",
          "always"
        ],
        "quotes": [
          "error",
          "double",
          {
            "avoidEscape": true
          }
        ],
        "indent": [
          "error",
          2,
          {
            "SwitchCase": 1
          }
        ],
        "arrow-parens": [
          "error",
          "as-needed"
        ]
      }
    },
    {
      "files": [
        "*.spec.ts",
        "*.spec.tsx",
        "*.spec.js",
        "*.spec.jsx"
      ],
      "env": {
        "jest": true
      },
      "rules": {}
    },
    {
      "files": "*.json",
      "parser": "jsonc-eslint-parser",
      "rules": {}
    }
  ]
}
