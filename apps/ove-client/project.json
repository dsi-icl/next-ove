{
  "name": "ove-client",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/ove-client/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx-electron:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/ove-client",
        "main": "apps/ove-client/src/main.ts",
        "tsConfig": "apps/ove-client/tsconfig.app.json",
        "assets": ["apps/ove-client/src/assets"]
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false,
          "fileReplacements": [
            {
              "replace": "apps/ove-client/src/environments/environment.ts",
              "with": "apps/ove-client/src/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "serve": {
      "executor": "nx-electron:execute",
      "options": {
        "buildTarget": "ove-client:build"
      }
    },
    "package": {
      "executor": "nx-electron:package",
      "options": {
        "name": "ove-client",
        "platform": ["mac", "windows", "linux"],
        "frontendProject": "ove-data",
        "outputPath": "dist/packages",
        "prepackageOnly": true
      }
    },
    "make": {
      "executor": "nx-electron:make",
      "options": {
        "name": "ove-client",
        "platform": ["mac", "windows", "linux"],
        "frontendProject": "ove-data",
        "outputPath": "dist/executables"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/ove-client/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/ove-client"],
      "options": {
        "jestConfig": "apps/ove-client/jest.config.js",
        "passWithNoTests": true
      }
    },
    "compile": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx run ove-client:build",
          "electron-builder build --config .electron-builder.config.js --dir --config.asar=false"
        ],
        "cwd": "apps/ove-client",
        "parallel": false
      }
    }
  }
}
