{
  "name": "ove-core",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/ove-core/src",
  "projectType": "application",
  "targets": {
    "db": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{workspaceRoot}/",
        "commands": [
          "export NODE_ENV=production",
          "npm run db push",
          "npm run db sync"
        ]
      }
    },
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/apps/ove-core",
        "main": "apps/ove-core/src/main.ts",
        "tsConfig": "apps/ove-core/tsconfig.app.json",
        "generatePackageJson": true,
        "assets": ["apps/ove-core/src/assets", "apps/ove-core/src/config"],
        "webpackConfig": "apps/ove-core/webpack.config.js"
      },
      "dependsOn": ["db"],
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "options": {
        "buildTarget": "ove-core:build"
      },
      "configurations": {
        "production": {
          "buildTarget": "ove-core:build:production"
        }
      },
      "dependsOn": ["db"]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/ove-core/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "dependsOn": ["db"],
      "options": {
        "jestConfig": "apps/ove-core/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
